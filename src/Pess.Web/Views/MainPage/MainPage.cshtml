<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto mt-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form method="post" action="@(Url.Action<MainPageController>(a=>a.Login(null, null)))">
                        <div class="form-group">
                            <input name="userName" type="text" class="form-control" placeholder="Your user name" required autofocus>
                        </div>

                        <div class="form-group">
                            <input name="password" type="password" class="form-control" placeholder="Password" required>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>